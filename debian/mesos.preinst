#!/bin/sh
set -e

case "$1" in
  install)
   ;;

  upgrade)
   if [ -f /var/run/mesos-master.pid ]; then
     touch /tmp/mesos-master-reload  
   fi
   if [ -f /var/run/mesos-slave.pid ]; then
     touch /tmp/mesos-slave-reload
   fi
   ;;

  abort-upgrade)
    ;;

  *)
    echo "preinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

#DEBHELPER#

exit 0
